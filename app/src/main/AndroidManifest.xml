<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.watchlist">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WatchList">
        <activity android:name=".UpdateAdminWatchListActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".WatchAdminViewActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".CreateNewestWatchListActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".UpdateWatchListActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".sampledata.MainMenuActivity"
            android:label="@string/title_activity_main_menu"
            android:theme="@style/Theme.WatchList.NoActionBar" />
        <activity android:name=".CreateWatchListActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".WatchViewActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".RegisterActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".AlarmReceiver"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>