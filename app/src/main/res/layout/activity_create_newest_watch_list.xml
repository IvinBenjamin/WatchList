<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C2C2C"
    tools:context=".CreateWatchListActivity">



    <LinearLayout
        android:id="@+id/imgLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/titleTextView"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/watchImageView"
            android:layout_width="match_parent"
            android:layout_height="269dp"
            app:srcCompat="@drawable/watchlist_logo" />

        <Button
            android:id="@+id/getAdminImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/getImg" />
    </LinearLayout>



    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Title"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/titleAdminEditText"
        />

    <EditText
        android:id="@+id/titleAdminEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_rounded_corners"
        android:importantForAutofill="no"
        android:padding="10dp"
        android:inputType="textShortMessage"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/contentTextView"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/contentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:text="@string/Content"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/contentAdminEditText"/>

    <EditText
        android:id="@+id/contentAdminEditText"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/edit_text_rounded_corners"
        android:gravity="top|end"
        android:importantForAutofill="no"
        android:inputType="text"
        android:padding="10dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/dateTextView"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:text="@string/Date"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/createAdminDateBtn"/>

    <Button
        android:id="@+id/createAdminDateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#CCCCCC"
        android:text="@string/SelectDate"
        android:textColor="#FFFFFF"
        app:backgroundTint="#304FFE"
        app:layout_constraintBottom_toTopOf="@id/createAdminWatchListBtn"
        app:layout_constraintEnd_toStartOf="@id/createAdminTimeBtn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/createAdminTimeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SelectTime"
        app:backgroundTint="#304FFE"
        app:layout_constraintBottom_toTopOf="@id/createAdminWatchListBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/createAdminDateBtn" />

    <Button
        android:id="@+id/createAdminWatchListBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Create"
        android:textColor="#FFFCFC"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#E50914"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>