<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu">

    <VideoView
        android:id="@+id/mainMenuBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="311dp"
            android:layout_height="649dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mainMenuWLBackground"
                android:layout_width="match_parent"
                android:layout_height="349dp"
                android:layout_alignBottom="@id/newestTitles"
                app:srcCompat="@drawable/watchlist_logo" />

            <Button
                android:id="@+id/newestTitles"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="#FFFFFF"
                android:text="Newest titles"
                android:textSize="24sp"
                app:backgroundTint="#FF0000" />

            <Button
                android:id="@+id/myWatchlist"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:text="My watchlist"
                android:textSize="24sp"
                app:backgroundTint="#FF0000" />

            <Button
                android:id="@+id/profileSetting"
                android:id="@+id/profileButtom"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:text="profile setting"
                android:textSize="24sp"
                app:backgroundTint="#FF0000" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>